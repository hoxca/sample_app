- if object.errors.any? 
  %div{ id: "error_explanation" }
    %div{ class: [ "alert","alert-error" ] }
      The form contains
      = pluralize(object.errors.count, "error")
    %ul
      - object.errors.full_messages.each do |msg|
        %li 
          *
          = msg
- if @ex_message.present?
  %div{ id: "error_explanation" }
    %div{ class: [ "alert","alert-error" ] }
      The form contains 1 error
    %ul
      %li
        *
        = @ex_message

