= provide(:title,@user.nickname)
%div{ class:"row" }
  %aside{ class:"span6" }
    %section
      %h1
        = gravatar_for @user
        = @user.common_name
%q
  %ul
    nickname: 
    = @user.nickname
    %br
    first name: 
    = @user.first_name
    %br
    last name: 
    = @user.last_name
    %br
    email:
    = @user.email
